extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3
    .row.mb-5
      .col-12
        +box-head(pageTitle)
      .col-12.text-right 
        a(href=`${prefixAdmin}/category/create`
              class="btn btn-outline-success"
            ) + Them moi
    .row
      table(
        class="table table-hover table-sm"
      )
        thead
          tr
            th STT
            th name 
            th Số lượng bài đăng
            th Hành động
        tbody
          each item, index in careers
            tr
              td #{index + 1}
              td #{item.name}
              td #{item.totleRecruitId}
              td
                a(
                  class="btn btn-info btn-sm"
                  href=`${prefixAdmin}/recruitment/${item.categoryId}`
                ) Chi tiết
                a(
                  class="btn btn-warning btn-sm ml-1"
                  href=`${prefixAdmin}/category/edit/${item.id}`
                ) Sửa
                button(
                  class="btn btn-danger btn-sm ml-1"
                  item-id=item.categoryId
                  button-delete
                  data-path=`${prefixAdmin}/category/delete`
                ) Xóa
          
      