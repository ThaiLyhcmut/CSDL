mixin box-filter(options, attribute)
  select(class = "form-control" ${attribute} id="exampleFormControlSelect1" name="categoryId")
    option(value = "all" selected=(categoryId?null:true))
      div All - (#{totle})
    each item in options
      option(value = item.categoryId selected=(categoryId == item.categoryId ? true : null)) 
        div #{item.name} - (#{item.totleRecruitId})

