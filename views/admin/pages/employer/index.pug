extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3
    .row
      .col-12
        +box-head(pageTitle)
      .col-12.text-right 
        a(href=`${prefixAdmin}/employer/create`
              class="btn btn-outline-success"
            ) + Them moi
    .row
      table(
        class="table table-hover table-sm"
      )
        thead
          tr
            th STT
            th fullName 
            th phone
            th email
            th address
            th companyName
            th location
            th taxID
            th active
        tbody
          each item, index in employers
            tr
              td #{index + 1}
              td #{item.fullName}
              td #{item.phone}
              th #{item.email}
              th #{item.address}
              td #{item.companyName}
              td #{item.location}
              td #{item.taxId}
              td 
                a(
                  class="btn btn-warning btn-sm ml-1 mb-1"
                  href=`${prefixAdmin}/employer/edit/${item.userId}`
                ) Sửa
                button(
                  class="btn btn-danger btn-sm ml-1"
                  item-id=item.userId
                  button-delete
                  data-path=`${prefixAdmin}/employer/delete`
                ) Xóa
          
      