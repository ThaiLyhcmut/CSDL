extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3
    .row
      .col-12
        +box-head(pageTitle)
    .row
      table(
        class="table table-hover table-sm"
      )
        thead
          tr
            th STT
            th fullName 
            th phone
            th email
            th address
            th companyName
            th location
            th taxID
        tbody
          each item, index in employers
            tr
              td #{index + 1}
              td #{item.fullName}
              td #{item.phone}
              th #{item.email}
              th #{item.address}
              td #{item.companyName}
              td #{item.location}
              td #{item.taxID}
          
      